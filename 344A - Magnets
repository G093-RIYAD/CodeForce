/*A_Magnets*/
#include <bits/stdc++.h>
using namespace std;

int main(){
    int a, count = 1;
    cin>>a;
    int ar[a];
    for(int i=0;i<a;i++){
        cin>>ar[i];
    }
    for(int i=0; i<a-1; i++)
    {
        if (ar[i] != ar[i+1])
        {
            count++;
        }
    }
    cout<<count;
    
}
